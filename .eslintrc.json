{
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["plugin:prettier/recommended"],
  "globals": {
    "Promise": true,
    "global": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "default-case": "error",
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"]
  },
  "plugins": ["jest"]
}
